<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grabaciones.opcionesGrabacion"
    android:background="@drawable/bg_color">

    <Button
        android:id="@+id/btnGrabandoAudio"
        android:layout_width="288dp"
        android:layout_height="131dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/white"
        android:text="Grabar audio"
        android:textColor="#433C3C"
        android:textSize="25dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/btnGrabandoVideo"
        android:layout_width="288dp"
        android:layout_height="131dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="Grabar  video"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        android:textColor="#FB0202"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnGrabandoAudio" />

    <Button
        android:id="@+id/btnCapturarFoto"
        android:layout_width="288dp"
        android:layout_height="131dp"
        android:layout_marginStart="60dp"
        android:backgroundTint="@color/white"
        android:text="Capturar foto"
        android:textColor="#084C01"
        android:textSize="25dp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGrabandoVideo"
        app:layout_constraintVertical_bias="0.375" />
</androidx.constraintlayout.widget.ConstraintLayout>