<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".corregir.VideoPlayer_Corregir_Activity">


    <RelativeLayout
        android:id="@+id/supe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163dp"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_rep_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:text="REPRODUCIR NUEVO VIDEO"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supe"
        android:layout_centerVertical="true"
        android:layout_marginTop="56dp"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_regrabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="68dp"
            android:text="REGRABAR" />

        <Button
            android:id="@+id/btn_guardar_nvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp"
            android:text="GUARDAR" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_rep_vid_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:text="RERPRODUCIR VIDEO ACTUAL" />

    </RelativeLayout>


</RelativeLayout>

